<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter current weight(lb)"
        android:gravity="center"
        android:textSize="20sp"
         />

    <EditText
        android:id="@+id/weightvaluelb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/saveweight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save Data" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/weightoss" />

</LinearLayout><!-- From: file:/E:/Projects/AndroidStudioProjects/SampleTutorials/HeartMonitor/app/src/main/res/layout/weightinput.xml -->